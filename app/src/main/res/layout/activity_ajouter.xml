<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".Ajouter">

    <EditText
        android:id="@+id/nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="Nom"
        android:textAlignment="center"
       android:inputType="text"
        android:textColor="@color/white"
        android:background="@color/black"
        />
    <EditText
        android:id="@+id/prenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
      android:layout_below="@+id/nom"
        android:layout_marginTop="25dp"
        android:hint="Prenom"
        android:textAlignment="center"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@color/black"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@+id/prenom"
        android:layout_marginTop="25dp"
        android:hint="Email"
        android:textAlignment="center"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@color/black"
        />
    <EditText
        android:id="@+id/numero_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="25dp"
        android:hint="numero Tel"
        android:textAlignment="center"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@color/black"
        />


    <Button
        android:id="@+id/sauvegarder"
        android:layout_below="@+id/numero_tel"
        android:padding="8dp"
        android:text="Sauvegarder"
        android:backgroundTint="#6771EE"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
  android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"


        tools:ignore="UnknownId" />
    <Button
        android:id="@+id/Annuler"
        android:layout_below="@+id/numero_tel"
        android:padding="8dp"
        android:text="Annuler"
        android:backgroundTint="#B3B4C1"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
android:layout_toEndOf="@+id/sauvegarder"

        />

</RelativeLayout>